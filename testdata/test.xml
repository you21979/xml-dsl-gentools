<?xml version="1.0" encoding="UTF-8"?>
<format>
	<struct name="base">
		<param name="id" type="uint16"/>
		<param name="name" type="string"/>
	</struct>
	<const name="max">
		<param name="chara_name_len" type="uint8" value="128" comment="キャラ名"/>
		<param name="item_name_len" type="uint8" value="256" comment="アイテム名"/>
		<param name="gold" type="uint32" value="999999999" comment="お金"/>
	</const>
	<const name="min">
		<param name="gold" type="uint32" value="0" comment="お金"/>
	</const>
	<enum name="item_type">
		<param name="none"/>
		<param name="equipment"/>
		<param name="consumption"/>
		<param name="event" comment="それを捨てるなんてとんでもない"/>
	</enum>
	<enum name="item_kind" flag="true">
		<param name="sword" comment=""/>
		<param name="pike"/>
		<param name="axe"/>
		<param name="shield"/>
		<param name="armor"/>
		<flag name="weapon" value="sword|pike|axe"/>
		<flag name="protect" value="armor|shield"/>
	</enum>
</format>
